{
  "name": "gen-rest",
  "version": "0.0.1",
  "description": "Generator CLI for backend rest service CLI",
  "private": true,
  "bin": {
    "gen-rest": "bin/gen-rest"
  },
  "scripts": {
    "build": "npm run compile && npm run test",
    "compile": "npm run clean && npm run tslint && tsc --pretty && npm run copy-templates",
    "copy-templates": "cpx \"src/templates/**/*.*\" build/templates",
    "clean": "rimraf dist coverage __tests__",
    "tslint": "tslint --fix -p .",
    "watch": "npm run clean && npm run tslint && npm run copy-templates && tsc --watch --pretty",
    "test": "jest",
    "snapupdate": "jest --updateSnapshot",
    "coverage": "jest --coverage",
    "watch-jest": "jest --watch"
  },
  "files": [
    "tsconfig.json",
    "tslint.json",
    "build",
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "dependencies": {
    "gluegun": "^3.0.0",
    "slugify": "^1.3.4",
    "ts-node": "~7.0.1"
  },
  "devDependencies": {
    "@types/jest": "~23.3",
    "@types/node": "~10.12",
    "cpx": "~1.5",
    "jest": "~23.6",
    "rimraf": "~2.6",
    "ts-jest": "~23.10",
    "tslint": "~5.12.0",
    "typescript": "~3.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
